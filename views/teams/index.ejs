<%- include("../partials/header") %>
<h2 id="allTeams">ALL TEAMS</h2>
<table>
  <thead>
    <tr>
      <th id="teamName">Team Name </th>
    </tr>
  </thead>
  <tbody>
    <% teams.forEach(function(t) { %>
    <tr>
      <td class="teamName"><a href="/teams/<%= t._id %>"><%= t.teamName %></a></td>
    </tr>
    <tr>
      <td>
      <% if (user?._id.equals(t.user)) { %>
      <form action="/teams/<%= t._id %>?_method=DELETE" method="POST" class="delete">
        <button type="submit">X</button>
      </form> 
       <% } %> 
    </td>
    </tr>
   <% }) %>
  </tbody>
</table>

<%- include("../partials/footer") %>